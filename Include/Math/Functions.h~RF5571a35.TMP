#pragma once

#include <Math/Matrix4.h>

namespace FLCL {
	namespace Math {

		Float32 DegreesToRadians(Float32 radians) {
			return radians * (180 / pi);
		};

		Float32 RadiansToDegrees(Float32 degrees) {
			return degrees * (pi / 180);
		};

		template<typename T>
		T Min(T a, T b) {
			(a) > (b) ? (b) : (a);
		};

		template<typename T>
		T Max(T a, T b) {
			(a) < (b) ? (b) : (a);
		};

		template<typename T>
		T Abs(T a, T b) {
			(a) < 0 ? -(a) : (a)
		};

	} // namespace Math
} // namespace FLCL